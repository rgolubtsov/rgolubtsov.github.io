<% var    TITLE = sitename + sitename_; var NHK = nav_home_k; var NHV = nav_home_v; %>
<% var SUBTITLE = subtitle + subtitle_; var NDK = nav_docs_k; var NDV = nav_docs_v; %>
<% var DESCR    = subtitle;             var NSK = nav_srcs_k; var NSV = nav_srcs_v; %>
<% var CODER    = coder;                var NBK = nav_blog_k; var NBV = nav_blog_v; %>
<% var CSS      = css;   var ICO = ico; var NGK = nav_ghub_k; var NGV = nav_ghub_v; %>

<% var VWAB_FOOTER_ICON_HRF = "http://anybrowser.org/campaign";                             %>
<% var VCSS_FOOTER_ICON_HRF = "http://jigsaw.w3.org/css-validator/check/referer";           %>
<%#var VWAB_FOOTER_ICON_SRC = "http://anybrowser.org/campaign/bvgraphics/anybrowser4b.png"; %>
<% var VWAB_FOOTER_ICON_SRC = "/static/img/misc/vwab";                                      %>
<%#var VCSS_FOOTER_ICON_SRC = "http://jigsaw.w3.org/css-validator/images/vcss";             %>
<% var VCSS_FOOTER_ICON_SRC = "/static/img/misc/vcss";                                      %>
<% var VWAB_FOOTER_ICON_TXT = "Viewable With Any Browser";                                  %>
<% var VCSS_FOOTER_ICON_TXT = "Valid CSS!";                                                 %>
<% var      FOOTER_ICON_CSS = "border:0;width:88px;height:31px";                            %>

<!DOCTYPE html>
<html lang="en-US" dir="ltr">
<head>
<meta http-equiv="Content-Type"    content="text/html; charset=UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta       name="viewport"        content="width=device-width,initial-scale=1" />
<meta       name="description"     content="<%= DESCR %>" />
<meta       name="author"          content="<%= CODER %>" />
<meta       name="copyright"       content="Copyright (C) 2016-2020 <%= CODER %>" />
<title><%- TITLE %></title>
<link href="<%= CSS %>" type="text/css"  rel="stylesheet" media="screen" />
<link href="<%= ICO %>"   type="image/png" rel="icon" />
</head>
<body id="radicchio">
<table id="header">
<tbody>
<tr id="title">
<td rowspan="2" id="v-bar-h"></td>
<td id="title-td"><%- TITLE %><br />
<span id="subtitle"><%- SUBTITLE %></span></td>
</tr>
<tr id="navbar">
<td id="navbar-td"><a href="<%- NHV %>">&nbsp;<%- NHK %>&nbsp;</a><a href="<%- NDV %>">&nbsp;<%- NDK %>&nbsp;</a><a href="<%- NSV %>">&nbsp;<%- NSK %>&nbsp;</a><a href="<%- NBV %>">&nbsp;<%- NBK %>&nbsp;</a><a href="<%- NGV %>">&nbsp;<%- NGK %>&nbsp;</a></td>
</tr>
</tbody>
</table>
<%- yield %>
<table id="footer">
<tbody><tr><td id="v-bar-f"></td><td id="footer-td"><a href="<%= VWAB_FOOTER_ICON_HRF %>"><img style="<%= FOOTER_ICON_CSS %>" src="<%= VWAB_FOOTER_ICON_SRC %>" alt="<%= VWAB_FOOTER_ICON_TXT %>" /></a><a href="<%= VCSS_FOOTER_ICON_HRF %>"><img style="<%= FOOTER_ICON_CSS %>" src="<%= VCSS_FOOTER_ICON_SRC %>" alt="<%= VCSS_FOOTER_ICON_TXT %>" /></a></td></tr></tbody>
</table>
</body>
</html>
<%# vim:set nu et ts=4 sw=4: %>
