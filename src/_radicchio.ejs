<% var    TITLE = sitename + sitename_; var NHK = nav_home_k; var NHV = nav_home_v; var NHID = nav_home_id; %>
<% var SUBTITLE = subtitle + subtitle_; var NDK = nav_docs_k; var NDV = nav_docs_v; var NDID = nav_docs_id; %>
<% var DESCR=subtitle; var MOTTO=motto; var NSK = nav_srcs_k; var NSV = nav_srcs_v; var NSID = nav_srcs_id; %>
<% var KEYWD=keywords; var CODER=coder; var NBK = nav_blog_k; var NBV = nav_blog_v; var NBID = nav_blog_id; %>
<% var CSS=css; var ICO=ico; var JS=js; var NGK = nav_ghub_k; var NGV = nav_ghub_v; var NGID = nav_ghub_id; %>

<% var VWAB_FOOTER_ICON_HRF = "https://anybrowser.org/campaign/";                            %>
<% var VCSS_FOOTER_ICON_HRF = "https://jigsaw.w3.org/css-validator/check/referer";           %>
<%#var VWAB_FOOTER_ICON_SRC = "https://anybrowser.org/campaign/bvgraphics/anybrowser4b.png"; %>
<% var VWAB_FOOTER_ICON_SRC = "/static/img/misc/vwab";                                       %>
<%#var VCSS_FOOTER_ICON_SRC = "https://jigsaw.w3.org/css-validator/images/vcss";             %>
<% var VCSS_FOOTER_ICON_SRC = "/static/img/misc/vcss";                                       %>
<% var VWAB_FOOTER_ICON_TXT = "Viewable With Any Browser";                                   %>
<% var VCSS_FOOTER_ICON_TXT = "Valid CSS!";                                                  %>
<% var      FOOTER_ICON_CSS = "border:0;width:88px;height:31px";                             %>

<!DOCTYPE html>
<html lang="en-US" dir="ltr">
<head>
<meta charset="utf-8" />
<meta http-equiv="x-ua-compatible" content="IE=edge" />
<meta       name="viewport"        content="width=device-width,initial-scale=1" />
<meta       name="description"     content="<%= DESCR %>" />
<meta       name="keywords"        content="<%= KEYWD %>" />
<meta       name="motto"           content="<%= MOTTO %>" />
<meta       name="alter"           content="<%= alter %>" />
<meta       name="author"          content="<%= CODER %>" />
<meta       name="copyright"       content="Copyright (C) 2016-2026 <%= CODER %>" />
<title><%- TITLE %></title>
<link href="<%= CSS %>" type="text/css"  rel="stylesheet" />
<link href="<%= ICO %>"   type="image/png" rel="icon" />
<link href="https://fonts.googleapis.com"    rel="preconnect" />
<link href="https://fonts.gstatic.com"       rel="preconnect" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />
</head>
<body id="radicchio">
<table id="header">
<tbody>
<tr id="title">
<td rowspan="2" id="v-bar-h"></td>
<td id="title-td"><%- TITLE %><br />
<span id="subtitle"><%- SUBTITLE %></span></td>
</tr>
<tr id="navbar">
<td id="navbar-td"><a href="<%- NHV %>" id="<%- NHID %>">&nbsp;<%- NHK %>&nbsp;</a><a href="<%- NDV %>" id="<%- NDID %>">&nbsp;<%- NDK %>&nbsp;</a><a href="<%- NSV %>" id="<%- NSID %>">&nbsp;<%- NSK %>&nbsp;</a><a href="<%- NBV %>" id="<%- NBID %>">&nbsp;<%- NBK %>&nbsp;</a><a href="<%- NGV %>" id="<%- NGID %>" target="_blank" rel="nofollow noopener noreferrer">&nbsp;<%- NGK %>&nbsp;</a></td>
</tr>
</tbody>
</table>
<%- yield %>
<div class="chevron"><button class="chevron" onclick="window.scrollTo({top:0,behavior:'smooth'});"><svg class="chevron"><path d="M2 11 l6 -6 l6 6 Z" fill="#69df06" /></svg></button></div>
<table id="footer">
<tbody><tr><td id="v-bar-f"></td><td id="footer-td"><a href="<%= VWAB_FOOTER_ICON_HRF %>" target="_blank" rel="nofollow noopener"><img style="<%= FOOTER_ICON_CSS %>" src="<%= VWAB_FOOTER_ICON_SRC %>" alt="<%= VWAB_FOOTER_ICON_TXT %>" /></a><a href="<%= VCSS_FOOTER_ICON_HRF %>" target="_blank" rel="nofollow noopener"><img style="<%= FOOTER_ICON_CSS %>" src="<%= VCSS_FOOTER_ICON_SRC %>" alt="<%= VCSS_FOOTER_ICON_TXT %>" /></a></td></tr></tbody>
</table>
<script src="<%= JS %>"></script>
</body>
</html>
<%# vim:set nu et ts=4 sw=4: %>
